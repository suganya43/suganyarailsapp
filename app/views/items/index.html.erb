<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Itemcategory</th>
      <th>Name</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<%= form_tag url_for(action: 'finalamount'), method: "post" do %>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= check_box_tag "item[]", item.id %>
 
        </td>
        <td><%= Itemcategory.find(item.itemcategoryid).name %></td>
        <td><%= item.name %></td>
        <td><%= item.rate %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <%= submit_tag "Submit" %>
<% end  %>
</table>

